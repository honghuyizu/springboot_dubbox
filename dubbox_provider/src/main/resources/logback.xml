<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="10 seconds">
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <!-- ================配置输出日志：输出到控制台================ -->
    <appender name="log_console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger [%file:%line] - %msg%n</pattern>
        </layout>
    </appender>
    <!-- ================配置输出日志：输出到文件================ -->
    <appender name="log_file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<!-- 日志文件 -->
        <File>logs/provider.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
        	<!-- 日志备份文件 -->
            <FileNamePattern>logs/provider.log.%i.bak</FileNamePattern>
            <!-- 日志备份文件：最小下标 -->
            <MinIndex>1</MinIndex>
            <!-- 日志备份文件：最大下标 -->
            <MaxIndex>12</MaxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger [%file:%line] - %msg%n</Pattern>
        </layout>
    </appender>
    <!-- ================设置日志级别================ -->
    <root level="error">
        <appender-ref ref="log_file" />
        <appender-ref ref="log_console" />
    </root>
    <logger name="com.mayland" additivity="false">
        <level value="debug" />
        <appender-ref ref="log_file" />
        <appender-ref ref="log_console" />
    </logger>
    <logger name="com.gradle" additivity="false">
        <level value="debug" />
        <appender-ref ref="log_file" />
        <appender-ref ref="log_console" />
    </logger>
</configuration>